{
	"name": "gamn2090/laravel-dynamic-permissions",
	"description": "Dynamic hierarchical permissions system for Laravel with role-based and user-specific overrides",
	"keywords": [
		"laravel",
		"permissions",
		"roles",
		"acl",
		"authorization",
		"dynamic-permissions",
		"hierarchical-permissions"
	],
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Gustavo",
			"email": "tu-email@example.com"
		}
	],
	"require": {
		"php": "^8.2",
		"illuminate/support": "^11.0|^12.0",
		"illuminate/database": "^11.0|^12.0",
		"illuminate/cache": "^11.0|^12.0",
		"illuminate/routing": "^11.0|^12.0",
		"illuminate/console": "^11.0|^12.0"
	},
	"require-dev": {
		"orchestra/testbench": "^9.0",
		"phpunit/phpunit": "^11.0",
		"mockery/mockery": "^1.6"
	},
	"autoload": {
		"psr-4": {
			"Gamn2090\\DynamicPermissions\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gamn2090\\DynamicPermissions\\Tests\\": "tests/"
		}
	},
	"extra": {
		"laravel": {
			"providers": [
				"Gamn2090\\DynamicPermissions\\DynamicPermissionsServiceProvider"
			],
			"aliases": {
				"DynamicPermissions": "Gamn2090\\DynamicPermissions\\Facades\\DynamicPermissions"
			}
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true
	}
}